{
  "compilerOptions": {
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "es2019.array",
      "es2022.error"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "target": "es6",
    "baseUrl": "./src",
    "skipLibCheck": true
  }
}
